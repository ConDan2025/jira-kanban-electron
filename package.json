{
  "name": "jira-kanban-electron",
  "version": "0.1.0",
  "private": true,
  "description": "Electron React app for Jira DC Kanban of Solution Initiatives with my subtasks",
  "main": "main.js",
  "author": "You",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently -k \"cross-env IS_DEV=1 vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && cross-env IS_DEV=0 electron-builder",
    "electron:dev": "npm run dev"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.jira-kanban",
    "productName": "Jira Kanban",
    "files": [
      "**/*",
      "!renderer/node_modules/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}